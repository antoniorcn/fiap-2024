<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lbl_informe1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informe o 1º número"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/edt_numero1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

    <TextView
        android:id="@+id/lbl_informe2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informe o 2º número"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/edt_numero2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

    <Button
        android:id="@+id/btn_somar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Soma" />

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp" />
</LinearLayout>